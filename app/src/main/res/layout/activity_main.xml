<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/succeededCountTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Succeeded Count: "
        android:textColor="@color/black"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/failedCountTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Failed Count: "
        android:textColor="@color/black"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="@+id/succeededCountTv"
        app:layout_constraintStart_toStartOf="@+id/succeededCountTv"
        app:layout_constraintTop_toBottomOf="@+id/succeededCountTv" />

    <Button
        android:id="@+id/authenticateBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Authenticate"
        app:layout_constraintEnd_toEndOf="@+id/failedCountTv"
        app:layout_constraintStart_toStartOf="@+id/failedCountTv"
        app:layout_constraintTop_toBottomOf="@+id/failedCountTv" />

</androidx.constraintlayout.widget.ConstraintLayout>